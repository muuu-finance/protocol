{
  "scripts": {
    "generate-types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "postinstall": "truffle compile && npm run generate-types",
    "deploy": "truffle migrate --skip-dry-run",
    "deploy:local": "yarn deploy --network ganachecli",
    "deploy:mocks-token": "truffle exec scripts/deploy_token_mocks.js",
    "deploy:mocks-token:local": "yarn deploy:mocks-token --network ganachecli",
    "deploy:mocks-kagla": "truffle exec scripts/deploy_kagla_mocks.js",
    "deploy:mocks-kagla:local": "yarn deploy:mocks-kagla --network ganachecli",
    "test": "npm run postinstall && truffle test --stacktrace-extra",
    "test:light": "truffle test --stacktrace-extra --network ganachecli --compile-none",
    "prettier:check": "prettier -c 'migrations/**/*.js' 'contracts/**/*.sol' 'test/**/*.js'",
    "prettier:write": "prettier --write 'migrations/**/*.js' 'contracts/**/*.sol' 'test/**/*.js'"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.4.0",
    "@truffle/hdwallet-provider": "^1.5.0",
    "big-number": "2.0.0",
    "chai": "^4.3.4",
    "jsonfile": "^6.1.0"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/truffle-v5": "^7.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/web3": "^1.2.2",
    "prettier": "^2.6.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "truffle-plugin-verify": "^0.5.21",
    "typechain": "^7.0.1",
    "typescript": "^4.6.2"
  }
}
